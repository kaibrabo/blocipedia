<div class="StripeElement">
    <%= form_tag charges_path do %>
        <article>

            <div class="StripeElement--invalid">
                <% if flash[:error].present? %>
                    <div id="error_explanation">
                        <p><%= flash[:error] %></p>
                    </div>
                <% end %>
            </div>
            <label class="amount">
                <span>
                    <h2>
                        Premium Member Subscription
                    </h2>
                    <h3>
                        Pay with Card:
                    </h3>
                    <p>
                        Amount: $15.00
                    </p>
                </span>
            </label>

        </article>

        <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
            data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
            data-description="Premium Member Subscription"
            data-amount="1500"
            data-locale="auto">
        </script>

        <hr />
        <%= link_to "Cancel", wikis_path %>
    <% end %>

</div>
